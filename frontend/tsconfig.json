{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "@tests/*": [ "./__tests__/*" ],
      "@src/*": ["src/*"]
    }
  },
  "includes": ["src", "custom.d.ts"]
}
